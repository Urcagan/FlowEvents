<Application x:Class="FlowEvents.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FlowEvents"
             xmlns:converters="clr-namespace:FlowEvents.Converters">
    <!-- " StartupUri="Views/MainWindow.xaml" >-->
    <Application.Resources>
        <!-- Создадим словарь ресурсов для доступа к обьявленным ресурсам во всем приложении        -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Отдельный словарь ресурсов -->
                <ResourceDictionary>
                    <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
                    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
                    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
                    <converters:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter"/>
                    <converters:PermissionsToBoolConverter x:Key="PermissionsToBoolConverter"/>
                    <converters:PermissionsToVisibilityConverter x:Key="PermissionsToVisibilityConverter"/>
                    <converters:InverseNullToVisibilityConverter x:Key="InverseNullToVisibilityConverter"/>
                    <!-- Добавьте здесь другие глобальные конвертеры -->
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="Background" Value="#007ACC"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="15,5"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

        </ResourceDictionary>
        <!-- Стили кнопок -->


    </Application.Resources>
</Application>
