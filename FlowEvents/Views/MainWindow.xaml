<Window x:Class="FlowEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowEvents"
        mc:Ignorable="d"
        Title="Журнал событий" Height="750" Width="1400" >
    <!-- Loaded="Window_Loaded"> -->

    <Window.Resources>
        <!--<local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>-->
        <!-- Регистрация конвертера в ресурсах -->

        <!--<local:PermissionsToVisibilityConverter x:Key="PermissionsToVisibilityConverter"/>-->
        <!-- -->
        <!--<local:PermissionsToBoolConverter x:Key="PermissionsConverter"/>-->
        <!-- Конвертер для преобразования null в Visibility -->
        <!--<local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>-->

        <!-- Обратный конвертер (Inverse) -->
        <!--<local:InverseNullToVisibilityConverter x:Key="InverseNullToVisibilityConverter"/>-->

        <!--<BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>-->
        <!-- Стиль для текста с переносом строк -->
        <Style x:Key="WrappedTextBlockStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="StandardButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="#FF617584" />
        </Style>

        <!--Добавим стиль для кнопки-->
        <Style x:Key="TransparentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <!-- Меню -->
            <RowDefinition Height="Auto"/>
            <!-- Панель инструментов -->
            <RowDefinition Height="*"/>
            <!-- Основной контент -->
            <RowDefinition Height="Auto"/>
            <!-- Статус бар -->
        </Grid.RowDefinitions>

        <!-- Меню -->
        <Menu Grid.Row="0">
            <MenuItem Header="Меню" >

                <MenuItem Header="Установки" Command="{Binding UnitOpenWindow}"></MenuItem>

                <MenuItem Header="Категории событий" Command="{Binding CategoryOpenWindow}"></MenuItem>

                <Separator/>

                <MenuItem Header="Пользователи" Command="{Binding OpenPermissionWindowCommand}"></MenuItem>

                <MenuItem Header="О пользователе" Command="{Binding UserWindowCommand}"/>

                <Separator />

                <MenuItem Header="Настройка" Command="{Binding SettingOpenWindow}"/>
                <MenuItem Header="О программе"></MenuItem>
                <Separator/>
                <MenuItem Header="Проверить обновление" Command="{Binding CheckUpdateAppCommand}"/>
                <Separator />
                <MenuItem Header="Login" Command="{Binding LoginCommand}"/>
                <MenuItem Header="Выйти" 
                        Command="{Binding LogoutCommand}"
                        Visibility="{Binding IsUserLoggedIn, Converter={StaticResource  BooleanToVisibilityConverter}}"/>
            </MenuItem>
        </Menu>

        <!-- Панель инструментов -->
        <Grid Grid.Row="1" Background="#EEF5FD"  IsEnabled="{Binding  CanAccess}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Margin="5"
                IsEnabled="{Binding  CanAccess}">

                <Label Content="Установка:" VerticalAlignment="Center"/>
                <ComboBox x:Name="CB_Units"
                   ItemsSource="{Binding Units}"
                   DisplayMemberPath="UnitName"
                   SelectedValuePath="Id"
                   SelectedItem="{Binding SelectedUnit}"                      
                   HorizontalAlignment="Left" VerticalAlignment="Center" Width="150" Margin="10"
                   IsEditable="False" StaysOpenOnEdit="True" IsDropDownOpen="False"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0,10,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" 
                    IsEnabled="{Binding IsAllEvents, Converter={StaticResource InverseBooleanConverter}}">
                <Button x:Name="_btnBack" 
                    Command="{Binding DownDateCommand}"
                    ToolTip="Back" HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="Gray" Margin="0,0,10,0">
                    <Image Source="/Resource/Images/Icons/Back.png" Height="16"/>
                </Button>

                <DatePicker x:Name="_datePickerStart"
                    SelectedDate="{Binding StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    VerticalAlignment="Center"
                    FirstDayOfWeek="Monday"
                    SelectedDateFormat="Short"/>

                <Label Content=" - " VerticalAlignment="Center"/>
                <DatePicker x:Name="_datePickerEnd"
                    SelectedDate="{Binding EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    VerticalAlignment="Center"
                    FirstDayOfWeek="Monday"
                    SelectedDateFormat="Short"/>

                <Button x:Name="_btnForvard" 
                    Command="{Binding UpDateCommand}"
                    ToolTip="Forvard" HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="Gray" Margin="10,0,0,0">
                    <Image Source="/Resource/Images/Icons/Forward.png" Height="16"/>
                </Button>

            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" >
                <CheckBox Margin="20,0,0,0"
                    IsChecked="{Binding IsAllEvents, Mode=TwoWay}" VerticalAlignment="Center" >
                    <TextBlock Text="Все даты" />
                </CheckBox>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0,10,0"/>
            </StackPanel>

            <StackPanel Grid.Column="3" Orientation="Horizontal" >
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="0,0,10,0"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="4,4"/>
                    </Style>
                    <Style TargetType="Image">
                        <Setter Property="Height" Value="16" />
                        <Setter Property="Width" Value="16" />
                    </Style>
                </StackPanel.Resources>

                <Button x:Name="AddEvent" 
                        Command="{Binding EventAddWindow}"
                        ToolTip="Добавить событие" >
                    <Image Source="/Resource/Images/Icons/Create.png" />
                    <!--<Button.Visibility>
                        <MultiBinding Converter="{StaticResource PermissionsToVisibilityConverter}">
                            <Binding Path="CurrentUserPermissions"/>
                            <Binding Source="EditDocument"/> -->
                    <!-- Перечисление прав через запятую -->
                    <!--
                        </MultiBinding>
                    </Button.Visibility>-->
                </Button>

                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0,10,0"/>
            </StackPanel>

            <Border Grid.Column="4"
                HorizontalAlignment="Right" 
                Padding="5" 
                Margin="0,0,15,0">
                <Label HorizontalContentAlignment="Right"
                      VerticalAlignment="Center"
                      Foreground="Black" 
                      FontWeight="Bold"
                      FontSize="16">
                    <TextBlock>
                        <Run Text="Пользователь: "/>
                        <Run Text="{Binding UserName}"/>
                    </TextBlock>
                </Label>
            </Border>

        </Grid>

        <!-- Основной контент -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>    <!-- Панель с таблицей событий -->
                <RowDefinition Height="Auto"/> <!-- Панель с раскрвывающейся дополнительной информацией по выбранному событию -->
                <RowDefinition Height="Auto"/> <!-- Панель пагинации -->
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <DataGrid x:Name="eventsDataGrid"
                      ItemsSource="{Binding Events}" 
                      SelectedItem="{Binding SelectedEvent, Mode=TwoWay}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Margin="5,5,5,5" Grid.Column="0" Grid.ColumnSpan="2" >

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>

                            <Style.Triggers>
                                <!-- Выделенная строка -->
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FFD6E8FF"/>
                                    <Setter Property="BorderBrush" Value="#FFA3C1FF"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Trigger>

                                <!-- Наведение на строку -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFECF5FF"/>
                                </Trigger>

                                <!-- Альтернативные строки -->
                                <Trigger Property="AlternationIndex" Value="1">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <!-- Контекстное меню -->
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Редактировать запись" 
                                      Command="{Binding EditEventCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"/>
                            <Separator/>
                            <MenuItem Header="Удалить запись"
                                  Command="{Binding DeleteEventCommand}"
                                  CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>

                    <DataGrid.Columns >
                        <DataGridTextColumn Header="Дата" Binding="{Binding DateEvent, StringFormat={}{0:dd.MM.yyyy} }" Width="auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style BasedOn="{StaticResource TextBlockStyle}" TargetType="TextBlock"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Установка" Binding="{Binding Unit}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style BasedOn="{StaticResource WrappedTextBlockStyle}" TargetType="TextBlock"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Переработка" Binding="{Binding OilRefining}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style BasedOn="{StaticResource WrappedTextBlockStyle}" TargetType="TextBlock"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Вид" Binding="{Binding Category}" Width="100" >
                            <DataGridTextColumn.ElementStyle>
                                <Style BasedOn="{StaticResource WrappedTextBlockStyle}" TargetType="TextBlock"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Событие" Binding="{Binding Description}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style BasedOn="{StaticResource WrappedTextBlockStyle}" TargetType="TextBlock"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Примечание, пояснение" Binding="{Binding Action}" Width="Auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style BasedOn="{StaticResource WrappedTextBlockStyle}" TargetType="TextBlock"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>


                        <!--<DataGridTemplateColumn Header="Документ" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding AttachedFiles}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#B3E6D9" Margin="0,0,0,3" CornerRadius="2">
                                                    <DockPanel LastChildFill="True" Margin="2">
                                                        -->
                        <!-- Кнопка фиксируется справа -->
                        <!--
                                                        <Button 
                                                            DockPanel.Dock="Right"
                                                            Content="📂" 
                                                            Command="{Binding OpenCommand}"
                                                            ToolTip="Открыть файл"
                                                            Margin="5,0,0,0"
                                                            Style="{StaticResource TransparentButtonStyle}"/>

                                                        -->
                        <!-- Текстовый блок занимает всё оставшееся пространство -->
                        <!--
                                                        <TextBlock 
                                                            Text="{Binding FileName}" 
                                                            ToolTip="{Binding FileName}"
                                                            TextWrapping="Wrap"
                                                            TextTrimming="CharacterEllipsis"
                                                            VerticalAlignment="Center"/>

                                                        -->
                        <!-- Контекстное меню -->
                        <!--
                                                        <DockPanel.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="Открыть файл" Command="{Binding OpenCommand}"/>
                                                                -->
                        <!--<MenuItem Header="Удалить" Command="{Binding DeleteCommand}"/>-->
                        <!--
                                                            </ContextMenu>
                                                        </DockPanel.ContextMenu>
                                                    </DockPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Мониторинг + Диспетчерский отчет"  Width="150" >
                            <DataGridTextColumn.ElementStyle>
                                <Style BasedOn="{StaticResource WrappedTextBlockStyle}" TargetType="TextBlock"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Автор" Binding="{Binding Creator}" Width="auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style BasedOn="{StaticResource TextBlockStyle}" TargetType="TextBlock"/>
                            </DataGridTextColumn.ElementStyle>

                        </DataGridTextColumn>-->


                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid Grid.Row ="1" >
                <Expander Header="Детали события" IsExpanded="True">
                    <!-- Содержимое как в варианте 1 -->
                    <Border Background="#FFF5F5F5" Padding="10" CornerRadius="5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">

                            <StackPanel>
                                <!-- Детали выбранного события -->
                                <Grid Visibility="{Binding SelectedEvent, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- Для меток -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Документы -->
                                        <ColumnDefinition Width="50"/>
                                        <!-- Разделитель -->
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- Для метки Мониторинга -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Мониторинг -->
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <!-- Дата -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Установка -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Документы + Мониторинг -->
                                        <!-- Добавьте нужное количество строк -->
                                    </Grid.RowDefinitions>

                                    <!-- Дата -->
                                    <TextBlock Grid.Column="0" Text="Дата:" Grid.Row="0" Style="{StaticResource TextBlockStyle}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedEvent.DateEvent, StringFormat={}{0:dd.MM.yyyy}}" VerticalAlignment="Center"/>

                                    <!-- Установка -->
                                    <TextBlock Grid.Column="0" Text="Установка:" Grid.Row="1"  Style="{StaticResource TextBlockStyle}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedEvent.Unit}" VerticalAlignment="Center"/>

                                    <!-- Блок Автор -->
                                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Автор:"  Style="{StaticResource TextBlockStyle}" HorizontalAlignment="Right" />
                                    <TextBlock Grid.Row="0" Grid.Column="4" Text="{Binding SelectedEvent.Creator}" VerticalAlignment="Center" />

                                    <!-- Блок документов -->
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Документы:" Style="{StaticResource TextBlockStyle}"/>
                                    <ItemsControl Grid.Row="2" Grid.Column="1" ItemsSource="{Binding DocumentFiles }" >
                                        <!--SelectedEvent.AttachedFiles-->
                                        <ItemsControl.ItemTemplate>

                                            <DataTemplate>
                                                <!-- Ваш шаблон для документов -->
                                                <Border Background="#FFFFFF" Margin="0,0,0,3" CornerRadius="2">
                                                    <DockPanel LastChildFill="True" Margin="2">
                                                        <!-- Кнопка фиксируется справа -->

                                                        <Button DockPanel.Dock="Right"
                                                                Content="💾" 
                                                                Command="{Binding SaveFileToUserCommand}"
                                                                ToolTip="Загрузить файл"
                                                                Margin="5,0,0,0"/>

                                                        <Button DockPanel.Dock="Right"
                                                                Content="📂" 
                                                                Command="{Binding OpenCommand}"
                                                                ToolTip="Открыть файл"
                                                                Margin="5,0,0,0"/>

                                                        <!-- Текстовый блок занимает всё оставшееся пространство -->
                                                        <TextBlock Text="{Binding FileName}" 
                                                                   ToolTip="{Binding FileName}"
                                                                   TextWrapping="Wrap"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   VerticalAlignment="Center"/>

                                                        <TextBlock 
                                                                   TextWrapping="Wrap"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Right">
                                                            <Run Text="Дата загрузки: " FontWeight="Bold"/>
                                                            <Run Text="{Binding UploadDate, StringFormat='dd.MM.yyyy HH:mm'}" FontStyle="Italic"/>
                                                        </TextBlock>

                                                        <!-- Контекстное меню -->
                                                        <DockPanel.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="Открыть файл" Command="{Binding OpenCommand}"/>
                                                                <!--<MenuItem Header="Удалить" Command="{Binding DeleteCommand}"/>-->
                                                            </ContextMenu>
                                                        </DockPanel.ContextMenu>
                                                    </DockPanel>
                                                </Border>

                                            </DataTemplate>

                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Блок мониторинга -->
                                    <TextBlock Text="Мониторинг:" Grid.Row="2" Grid.Column="3" 
                                               Style="{StaticResource TextBlockStyle}" 
                                               FontWeight="Bold"/>
                                    <!-- Visibility="Collapsed" Скрываем дублирующую метку -->

                                    <ItemsControl Grid.Row="2" Grid.Column="4" ItemsSource="{Binding MonitoringFiles }" >
                                        <!--SelectedEvent.AttachedFiles-->
                                        <ItemsControl.ItemTemplate>

                                            <DataTemplate>
                                                <!-- Ваш шаблон для мониторинга -->
                                                <Border Background="#FFFFFF" Margin="0,0,0,3" CornerRadius="2">
                                                    <DockPanel LastChildFill="True" Margin="2">
                                                        <!-- Кнопка фиксируется справа -->

                                                        <Button DockPanel.Dock="Right"
                                                                Content="💾" 
                                                                Command="{Binding SaveFileToUserCommand}"
                                                                ToolTip="Загрузить файл"
                                                                Margin="5,0,0,0"/>

                                                        <Button DockPanel.Dock="Right"
                                                                Content="📂" 
                                                                Command="{Binding OpenCommand}"
                                                                ToolTip="Открыть файл"
                                                                Margin="5,0,0,0"
                                                                Cursor="Hand"/>


                                                        <!-- Текстовый блок занимает всё оставшееся пространство -->
                                                        <TextBlock Text="{Binding FileName}" 
                                                                   ToolTip="{Binding FileName}"
                                                                   TextWrapping="Wrap"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   VerticalAlignment="Center"/>

                                                        <TextBlock  
                                                                   TextWrapping="Wrap"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Right">
                                                            <Run Text="Дата загрузки: " FontWeight="Bold"/>
                                                            <Run Text="{Binding UploadDate, StringFormat='dd.MM.yyyy HH:mm'}" FontStyle="Italic"/>
                                                        </TextBlock>

                                                        <!-- Контекстное меню -->
                                                        <DockPanel.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="Открыть файл" Command="{Binding OpenCommand}"/>
                                                                <!--<MenuItem Header="Удалить" Command="{Binding DeleteCommand}"/>-->
                                                            </ContextMenu>
                                                        </DockPanel.ContextMenu>
                                                    </DockPanel>
                                                </Border>

                                            </DataTemplate>

                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                </Grid>

                                <!-- Сообщение при отсутствии выбора -->
                                <TextBlock Text="Выберите событие для просмотра деталей" 
                                           Visibility="{Binding SelectedEvent, Converter={StaticResource InverseNullToVisibilityConverter}}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontStyle="Italic" Foreground="Gray"/>
                            </StackPanel>

                        </ScrollViewer>
                    </Border>
                </Expander>
            </Grid>

            <Border Background="#80FFFFFF" 
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar IsIndeterminate="True" 
                     Width="100" 
                     Height="20"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"/>
            </Border>
            <Border Background="#80FFFFFF" 
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar IsIndeterminate="True" 
                     Width="100" 
                     Height="20"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"/>
            </Border>
            
            <!-- Панель пагинации -->
            <Border Grid.Row="2" Background="#F0F0F0" Padding="10,5" BorderThickness="0,1,0,0" BorderBrush="#CCCCCC">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Информация о странице -->
                    <TextBlock Grid.Column="0" 
                       Text="{Binding PaginationInfo}"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

                    <!-- Элементы управления пагинацией -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="⏮" 
                        Command="{Binding Pagination.FirstPageCommand}"
                        ToolTip="Первая страница"
                        Style="{StaticResource StandardButtonStyle}"
                        Width="30"/>

                        <Button Content="◀" 
                        Command="{Binding Pagination.PreviousPageCommand}"
                        ToolTip="Предыдущая страница"
                        Style="{StaticResource StandardButtonStyle}"
                        Width="30"
                        Margin="5,0,0,0"/>

                        <ComboBox ItemsSource="{Binding PageNumbers}"
                          SelectedItem="{Binding Pagination.CurrentPage}"
                          Width="60"
                          Margin="10,0"
                          VerticalAlignment="Center"/>

                        <TextBlock Text="/" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Pagination.TotalPages}" 
                           VerticalAlignment="Center"
                           Margin="5,0,10,0"/>

                        <Button Content="▶" 
                        Command="{Binding Pagination.NextPageCommand}"
                        ToolTip="Следующая страница"
                        Style="{StaticResource StandardButtonStyle}"
                        Width="30"/>

                        <Button Content="⏭" 
                        Command="{Binding Pagination.LastPageCommand}"
                        ToolTip="Последняя страница"
                        Style="{StaticResource StandardButtonStyle}"
                        Width="30"
                        Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- Размер страницы -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Строк на странице:" 
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
                        <ComboBox ItemsSource="{Binding Pagination.PageSizeOptions}"
                          SelectedItem="{Binding Pagination.PageSize}"
                          Width="60"
                          VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Общее количество -->
                    <TextBlock Grid.Column="3" 
                       Text="{Binding TotalEventsCount, StringFormat='Всего записей: {0}'}"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       FontWeight="Bold"/>
                </Grid>
            </Border>

        </Grid>

        <!-- Статус бар -->
        <StatusBar x:Name="statusBar" Grid.Row="3">
            <Border BorderBrush="Black" BorderThickness="1" >
                <TextBlock x:Name="lblToMainPath" 
                           Text="{Binding CurrentDbPath, UpdateSourceTrigger=PropertyChanged}" 
                           HorizontalAlignment="Center" 
                           Margin="3 0 3 0 "/>
            </Border>
        </StatusBar>


        <!-- Overlay для ошибки доступа --><!--
        <Border Grid.Row="1" Grid.RowSpan="2" 
            Background="#CCFFFFFF" 
            Visibility="{Binding ShowAccessOverlay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" >
                <TextBlock Text="Доступ запрещен" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="Red" 
                       HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding OverlayMessage}" 
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"/>
                <TextBlock Text="Обратитесь к администратору для получения доступа" 
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"/>
                <Button Content="Войти" 
                    Command="{Binding LoginCommand}"
                    Margin="0,20,0,0"
                    Padding="10,5"
                    HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        --><!-- Overlay для ошибки базы данных --><!--
        <Border Grid.Row="1" Grid.RowSpan="2" 
            Background="#CCFFFFFF" 
            Visibility="{Binding ShowDatabaseErrorOverlay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" >
                <TextBlock Text="Ошибка базы данных" 
