<UserControl x:Class="FlowEvents.Views.UserPickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlowEvents.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Поле выбора с поиском -->
        <ComboBox Grid.Column="0" ItemsSource="{Binding SuggestedUsers}"
                  Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                  IsEditable="True" IsTextSearchEnabled="False"
                  DisplayMemberPath="DisplayName"
                  SelectedItem="{Binding SelectedUser}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="2">
                        <TextBlock Text="{Binding DisplayName}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Username}" FontSize="10" Foreground="Gray"/>
                        <TextBlock Text="{Binding Email}" FontSize="10" Foreground="Blue"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <!-- Кнопка расширенного поиска -->
        <Button Grid.Column="1" Content="..." Command="{Binding ShowSearchDialogCommand}"
                Margin="5,0,0,0" Width="30"/>
    </Grid>
</UserControl>
