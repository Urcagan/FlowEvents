<Window x:Class="FlowEvents.EventEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowEvents"
        mc:Ignorable="d"
        Title="EventView" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="ComboBox" x:Key="RequiredComboBox">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedItem.Id, RelativeSource={RelativeSource Self}}" Value="-1">
                    <Setter Property="Foreground" Value= "Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height ="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <DatePicker 
                x:Name="DatePicker"
                SelectedDate="{Binding SelectedDateEvent, Mode =TwoWay, StringFormat={}{0:dd.MM.yyyy}}"
                Width ="120"
                Margin="10"/>
            <ComboBox 
                x:Name="UnitComboBox"
                Style="{StaticResource RequiredComboBox}"
                ItemsSource="{Binding Units}"
                DisplayMemberPath="Unit"
                SelectedValuePath="Id"
                SelectedItem="{Binding SelectedUnit}"
                Width="250"
                Margin="10" />
            <ComboBox 
                x:Name="Category"
                ItemsSource="{Binding Categories}"
                DisplayMemberPath="Name"
                SelectedValuePath="Id"
                SelectedItem="{Binding SelectedCategory}"
                Width="300"
                Margin="10"
                Style="{StaticResource RequiredComboBox}"/>
        </StackPanel>

        <Grid Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                Grid.Row="0"
                HorizontalAlignment="Center"
                Text="Описание событи"/>

            <TextBlock 
                Grid.Column="2"
                Grid.Row="0"
                HorizontalAlignment="Center"
                Text="Компенсирующие мероприятия"/>

            <TextBox Grid.Column="0"
                     Grid.Row="1"
                 x:Name="TextEvent"
                 Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"    
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Disabled"
                 Margin="5"
                 VerticalAlignment="Stretch"/>

            <GridSplitter Grid.Column="1" Grid.Row="1" ShowsPreview="False" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <TextBox Grid.Column="2"
                     Grid.Row="1"
                x:Name="TextAction"
                Text="{Binding Action, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                AcceptsReturn="True"
                AcceptsTab="True"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled"
                Margin="5"
                VerticalAlignment="Stretch"/>
        </Grid>

        <StackPanel Grid.Row="2"
            Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Content="Сохранить" 
                    Command="{Binding SaveUpdateCommand}"
                    Width="80" Height="30" Margin ="10" 
                    IsEnabled="{Binding CanSave}"/>

            <Button Content="Отмена" 
                    Command="{Binding CancelCommand}"
                    Width="80" Height="30" Margin ="10" />
        </StackPanel>


    </Grid>
</Window>
